.container
  .tabs-container
    = "Please select your type of request"
    %ul.nav.nav-tabs
      %li
        %a{"aria-expanded" => "false", "data-toggle" => "tab", :href => "#tab-1"} You got work for us?
      %li
        %a{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#tab-2"} You want to work for us?
  .tab-content
    #tab-1.tab-pane
      .row
        .col-md-6
          .col-md-6.no-padding-col
            .control-group
              .form-group.controls
                %input#name.form-control{"aria-invalid" => "false", "data-validation-required-message" => "Please enter your name.", :placeholder => "Name", :required => "", :type => "text"}/
                %p.help-block
          .col-md-6.no-padding-col
            .control-group
              .form-group.controls
                %input#email.form-control{"data-validation-required-message" => "Please enter your email address.", :placeholder => "Email Address", :required => "", :type => "email"}/
                %p.help-block
          .col-m-12
            .control-group
              .form-group.controls
                %textarea#message.form-control{"data-validation-required-message" => "Please enter a message.", :placeholder => "Message", :required => "", :rows => "5"}
                %p.help-block
        .col-md-6
          = scrivito_tag(:p, widget, :inquiry_text)
        #success
          .form-group.col-xs-12
            %button.btn.btn-skin.btn-lg{:type => "submit"} Send Message
    #tab-2.tab-pane.active
      .row
        .col-md-6
          .col-md-6.no-padding-col
            .control-group
              .form-group.controls
                %input#name.form-control{"aria-invalid" => "false", "data-validation-required-message" => "Please enter your name.", :placeholder => "Name", :required => "", :type => "text"}/
                %p.help-block
          .col-md-6.no-padding-col
            .control-group
              .form-group.controls
                %input#email.form-control{"data-validation-required-message" => "Please enter your email address.", :placeholder => "Email Address", :required => "", :type => "email"}/
                %p.help-block
          .col-m-12
            .control-group
              .form-group.controls
                %textarea#message.form-control{"data-validation-required-message" => "Please enter a message.", :placeholder => "Message", :required => "", :rows => "5"}
                %p.help-block
        .col-md-6
          = scrivito_tag(:p, widget, :work_for_us_text)
        #success
          .form-group.col-xs-12
            %button.btn.btn-skin.btn-lg{:type => "submit"} Send Message
